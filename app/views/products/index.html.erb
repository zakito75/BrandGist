<h1 class="section-title">liste produits:</h1>
<% @products.each do |product| %>
  <div class="bloc-product">
    <div class=container-img-title">
   <div class="container-image">
     <%= image_tag "smartphone.jpg", :class => "img-preview" %>
    </div>
    </div>
    <p class="text-description-product"><%= truncate(product.description, :lenght => 20) %></p>
    <div class="info-product">
     <p class="price-product"><%= product.price %></p>
     <p class="version-product"><%= product.version %></p>
     <a href="/products/<%= product.id %>">En savoir plus</a>
   </div>
  </div>
<% end %>
<%= paginate @products %>
